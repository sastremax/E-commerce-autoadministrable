{
     "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
     "vcs": {
          "enabled": false,
          "clientKind": "git",
          "useIgnoreFile": false
     },
     "files": {
          "ignore": ["node_modules", ".next", "build", "dist", "build/chunks"],
          "ignoreUnknown": false
     },
     "formatter": {
          "enabled": true,
          "indentStyle": "space",
          "indentWidth": 5
     },
     "organizeImports": {
          "enabled": true
     },
     "linter": {
          "enabled": true,
          "rules": {
               "recommended": true
          }
     },
     "javascript": {
          "formatter": {
               "quoteStyle": "double"
          }
     }
}
